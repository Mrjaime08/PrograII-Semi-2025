<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="16dp"
    android:gravity="center_vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFoto"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="40dp">

        <ImageView
            android:id="@+id/imgFotoAdaptador"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher_round"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/lblCodProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CÃ³digo: 001"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/lblProducto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Manzanas"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/lblpresentacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Presentacion"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/lblMarca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Del Monte"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/lblPrecioUnidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1.50"
            android:textSize="16sp"/>

    </LinearLayout>

</LinearLayout>